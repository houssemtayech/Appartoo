{% extends "AppartooAppBundle::layout.html.twig" %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"><h3 class="panel-title">Liste des amis</h3></div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for ami in amis %}
                                        <tr>
                                            <td>{{ ami.amis }}</td>
                                            <td><a class="btn btn-danger waves-effect waves-light" href="{{path('appartoo_app_supprimer_ami',{'id': ami.id})}}">Supprimer</a></td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





{% endblock %}